<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerlayout"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_color"
            android:minHeight="?attr/actionBarSize"
            android:paddingVertical="11dp"
            app:buttonGravity="center_vertical"
            app:maxButtonHeight="50dp"
            app:theme="@style/BaseTheme"
            app:titleTextColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baseline_account_circle_24" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lưu Nguyễn Kỳ Thư"
                        android:textColor="@color/second_color"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvUserRole"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trưởng phòng giáo vụ"
                        android:textColor="@color/third_color"
                        android:textSize="21sp"
                        android:textStyle="italic" />
                </LinearLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:titleTextAppearance="@style/toolbarNoTitle" />
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnKhoa"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/main_icon"
                        android:drawableTop="@drawable/khoa_icon"
                        android:drawablePadding="5dp"
                        android:padding="15dp"
                        android:text="KHOA"
                        android:textColor="@color/primary_color"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnLop"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/main_icon"
                        android:drawableTop="@drawable/lop_icon"
                        android:drawablePadding="5dp"
                        android:layout_marginLeft="30dp"
                        android:padding="15dp"
                        android:text="LỚP"
                        android:textSize="16sp"
                        android:textColor="@color/primary_color"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp">
                    <Button
                        android:id="@+id/btnGiangVien"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/main_icon"
                        android:drawableTop="@drawable/giangvien_icon"
                        android:drawablePadding="5dp"
                        android:padding="15dp"
                        android:text="GIẢNG VIÊN"
                        android:textSize="16sp"
                        android:textColor="@color/primary_color"/>
                    <Button
                        android:id="@+id/btnSinhVien"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/main_icon"
                        android:drawableTop="@drawable/sinhvien_icon"
                        android:drawablePadding="5dp"
                        android:layout_marginLeft="30dp"
                        android:padding="15dp"
                        android:text="SINH VIÊN"
                        android:textSize="16sp"
                        android:textColor="@color/primary_color"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp">
                    <Button
                        android:id="@+id/btnHocPhan"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/main_icon"
                        android:drawableTop="@drawable/hocphan_icon"
                        android:drawablePadding="5dp"
                        android:padding="15dp"
                        android:text="HỌC PHẦN"
                        android:textSize="16sp"
                        android:textColor="@color/primary_color"/>
                    <Button
                        android:id="@+id/btnLopTinChi"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/main_icon"
                        android:drawableTop="@drawable/khoa_icon"
                        android:drawablePadding="5dp"
                        android:layout_marginLeft="30dp"
                        android:padding="15dp"
                        android:text="LỚP TÍN CHỈ"
                        android:textSize="16sp"
                        android:textColor="@color/primary_color"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp">
                    <Button
                        android:id="@+id/btnDiem"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/main_icon"
                        android:drawableTop="@drawable/diem_icon"
                        android:drawablePadding="5dp"
                        android:padding="15dp"
                        android:text="ĐIỂM"
                        android:textSize="16sp"
                        android:textColor="@color/primary_color"/>
                    <Button
                        android:id="@+id/btnThongKe"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/main_icon"
                        android:drawableTop="@drawable/thongke_icon"
                        android:drawablePadding="5dp"
                        android:layout_marginLeft="30dp"
                        android:padding="15dp"
                        android:text="THỐNG KÊ"
                        android:textSize="16sp"
                        android:textColor="@color/primary_color"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
    android:id="@+id/navigation_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:headerLayout="@layout/header_navigation"
    app:menu="@menu/menu_navigation">
    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>